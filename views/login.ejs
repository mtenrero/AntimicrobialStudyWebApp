<!-- LOGIN FORM -->
<% layout('layout') %>
<link href="/stylesheets/login.css" rel="stylesheet" type="text/css">
<div class="text-center" style="padding:50px 0">
    <img src="images/boxer.png" width="200" height="200">
    <div class="logo">Iniciar sesión</div>
    <!-- Main Form -->
    <div class="login-form-1">
        <form action="/login" method="post" id="login-form" class="text-left">
            <div class="login-form-main-message"></div>
            <div class="main-login-form">
                <div class="login-group">
                    <div class="form-group">
                        <label for="lg_username" class="sr-only">Usuario</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="usuario">
                    </div>
                    <div class="form-group">
                        <label for="lg_password" class="sr-only">Contrase?a</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="contraseña ">
                    </div>
                    <div class="form-group login-group-checkbox">
                        <input type="checkbox" id="lg_remember" name="lg_remember">
                        <label for="lg_remember">recordar</label>
                    </div>
                </div>
                <button type="submit" class="login-button">
                    <i class="fa fa-chevron-right"></i>
                </button>
            </div>
        </form>
    </div>
    <!-- end:Main Form -->
</div>