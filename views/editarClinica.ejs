<% layout('layout') %>
<div class="panel panel-default" id="docContainer">
    <div class="panel-heading">
        <h3 class="panel-title">Editando Clínica: <b><%- clinica.nombre %></b></h3>
    </div>
    <div class="panel-body">

        <form action="/clinica/editar/<%- clinica.id %>" method="post" id="formEditClinica">

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Nombre:</span>
                <input name="nombre" type="text" class="form-control" value="<%- clinica.nombre %>" >
                <br>
            </div>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Dirección:</span>
                <input name="dirección" type="text" class="form-control" value="<%- clinica.dirección %>">
                <br>
            </div>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">E-mail:</span>
                <input name="email" type="text" class="form-control" value="<%- clinica.email %>">
                <br>
            </div>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Teléfono:</span>
                <input name="telefono" type="text" class="form-control" value="<%- clinica.telefono %>">
                <br>
            </div>

            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Fecha visita:</span>
                <input name="fecha_clinica" type="text" class="form-control" value="<%- moment(clinica.fecha_visita, "yyyy-mm-dd").format("DD/MM/YYYY") %>" aria-describedby="basic-addon1">
                <br>
            </div>
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Notas:</span>
                <input name="notas" type="text" class="form-control" value="<%- clinica.notas %>" aria-describedby="basic-addon1">
                <br>
            </div>

            <div align="center">
                <input class="btn btn-primary" type="submit" value="Guardar cambios">
            </div>
        </form>

    </div>


</div>